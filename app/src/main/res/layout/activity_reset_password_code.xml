<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/email_sent_logo"
        android:layout_width="274dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="@string/reset_psw_logo"
        android:textAlignment="center"
        android:textColorHint="@color/grey"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_request_email"
        android:layout_width="349dp"
        android:layout_height="49dp"
        android:background="@drawable/round_btn_grey"
        android:text="@string/resend_email_btn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirm_code" />

    <Button
        android:id="@+id/btn_confirm_code"
        android:layout_width="316dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/round_btn_black"
        android:text="@string/continue_btn"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btn_request_email"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/btn_request_email"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCode" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCode"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/code"
        app:layout_constraintEnd_toEndOf="@+id/btn_confirm_code"
        app:layout_constraintStart_toStartOf="@+id/btn_confirm_code"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_code_resset_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clear"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="475dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/email_sent_main_info"
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:layout_marginTop="100dp"
        android:text="@string/email_sent_main_info"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/email_sent_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:text="@string/email_sent_info"
        android:textColor="@color/blacktxt"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCode"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutCode"
        app:layout_constraintTop_toBottomOf="@+id/email_sent_main_info" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:onClick="onImageButtonClick"
        android:src="@drawable/chevron_arrow_left"
        app:layout_constraintBottom_toTopOf="@+id/email_sent_main_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
