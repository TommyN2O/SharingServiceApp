<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:radius="8dp"
    app:cardCornerRadius="12dp"
    android:elevation="4dp"
    tools:context=".activitys.HelperListActivity">
    <!-- list_help_item_customer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Profile Photo (round) -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="71dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_border"
            android:scaleType="centerCrop" />

        <!-- Name, Rating, Reviews, and Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <!-- Horizontal LinearLayout to contain the Name and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <!-- Name of the person -->
                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:text="John Doe"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!-- Price per hour on the same line as Name -->
                <TextView
                    android:id="@+id/price_per_hour"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50$/h"
                android:textSize="18sp"
                android:textColor="@color/my_light_primary"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="start"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>
            </LinearLayout>

            <!-- Star Rating and Number of Reviews -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <!-- Star Image -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_star" />

                <!-- Rating Number (1-5) -->
                <TextView
                    android:id="@+id/rating_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="4.0"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="(100 reviews)"
                    android:textColor="#7f7f7f"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Cities with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_city" />

                <TextView
                    android:id="@+id/detail_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Cities: New York, Los Angeles"
                    android:textSize="14sp"
                    android:textColor="#7f7f7f"/>
            </LinearLayout>

            <!-- Short Description (below the rating) -->
            <TextView
                android:id="@+id/short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="This is a short description about the person or item."
                android:textColor="#7f7f7f"
                android:textSize="14sp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
