<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.DetailedTasksActivity">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/backArrowButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chevron_arrow_left"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back" />

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Planned Task"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Customer Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Info"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingBottom="8dp" />

            <ImageView
                android:id="@+id/customerProfileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user"
                android:contentDescription="Customer Profile Image" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>

            <!-- Task Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textSize="16sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/taskLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: Task Location"
                android:textSize="14sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/taskDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: Task Date"
                android:textSize="14sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/taskTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: Task Time"
                android:textSize="14sp"
                android:paddingBottom="8dp"/>

            <!-- Task Images Section (Moved here after Task Time) -->
            <TextView
                android:id="@+id/galleryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Images"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:paddingBottom="8dp" />

            <!-- Tasker Info -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galleryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_gallery_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasker Info"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:paddingBottom="8dp"/>

            <ImageView
                android:id="@+id/taskerProfileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user"
                android:contentDescription="Tasker Profile Image" />

            <TextView
                android:id="@+id/taskerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasker Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>

            <!-- Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/btnCompleteTask"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Complete Task"
                    android:visibility="gone"
                    android:backgroundTint="@color/my_light_primary"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnSupport"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:id="@+id/messageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_edittext"
                    android:src="@drawable/messeges"
                    android:contentDescription="Message Icon"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
