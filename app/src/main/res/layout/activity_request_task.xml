<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ScrollView for the content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="682dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title (Centered "Request") and Back Button on the same level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <!-- Back Button (Larger and Aligned to the left) -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="53dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/chevron_arrow_left" />

                <!-- Title (Centered "Request") -->
                <TextView
                    android:layout_width="253dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="80dp"
                    android:text="Request"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- "Describe Your Task" label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Describe Your Task"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Task Description Input -->
            <EditText
                android:id="@+id/edit_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:gravity="top|start"
                android:hint="Enter task details..."
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:minLines="4"
                android:padding="12dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select Category" />

            <TextView
                android:id="@+id/tv_selected_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:text="Select Categories"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <!-- Budget -->

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" Select Location" />

            <TextView
                android:id="@+id/tv_selected_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:text="Select Location"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Date Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select Days and Time" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/spinner_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext"/>

                <Spinner
                    android:id="@+id/spinner_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_edittext"
                    android:layout_weight="1" />
            </LinearLayout>


            <!-- Time set how long to do -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" Select Duration" />

            <TextView
                android:id="@+id/tv_selected_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_edittext"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:text="Select Duration"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />


            <!-- Photo Gallery -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Upload Photos" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/gallery_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <Button
                android:id="@+id/btn_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Photo" />

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button (Fixed Position) -->
    <Button
        android:id="@+id/btn_submit_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:layout_marginTop="16dp"/>

</LinearLayout>
