<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activitys.PeopleRequestDetailedHistoryActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/backArrowButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/chevron_arrow_left"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_detailed_task_request_title"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_detailed_task_request_customer_header"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="8dp" />

                <ImageView
                    android:id="@+id/customerProfileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user"
                    android:contentDescription="Customer Profile Image" />

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_detailed_request_customer_task_details_header"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_category"
                        android:contentDescription="Category Icon"
                        android:tint="@color/my_light_primary"/>

                    <TextView
                        android:id="@+id/taskCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Paslauga: Cleaning"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Date and Time Icon"/>

                    <TextView
                        android:id="@+id/taskDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Data ir laikas: 2025-04-25, 14:00"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/taskLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Miestas: 123 Main St"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_duration"/>

                    <TextView
                        android:id="@+id/taskDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Trukmė: 2 val."
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_status"/>

                    <TextView
                        android:id="@+id/taskStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Statusas: Užbaigtas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_price"/>

                    <TextView
                        android:id="@+id/taskPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Valandinis: 25€/val."
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/taskDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_detailed_request_customer_description_header"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/taskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Description goes here..."
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_marginTop="4dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/galleryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_detailed_request_customer_gallery_header"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/galleryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="107dp"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:scrollbars="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_gallery_image" />
            </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>