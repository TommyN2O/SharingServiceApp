<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <!-- Task Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:padding="1dp">

        <!-- Category Image -->
        <ImageView
            android:id="@+id/img_task_category"
            android:layout_width="68dp"
            android:layout_height="79dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/clean_category"
            />

        <!-- Task Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_task_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Cleaning"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 PM"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Task Action Button (View Task or Accept Task for Tasker) -->
        <Button
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Task"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
